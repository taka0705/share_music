<div class="row">
  <div class="col-sm-4 text-center">
    <h3><%= @user.name %>さんのユーザ情報</h3>
  </div>
  <div class="col-sm-7 text-right">
    <%= link_to "編集",edit_admin_user_path(@user.id),class: "btn btn-success" %>
  </div>
</div>

<div class="row">
  <div class="col-sm-8 mx-auto">
          <table class= "table-borderless">
        <tr>
          <td>ユーザID</td>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <td>氏名</td>
          <td>
            <%= @user.name %>
          </td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td>
            <%= @user.email %>
          </td>
        </tr>
        <tr>
          <td>会員ステータス</td>
          <% if @user.user_status == "有効" %>
            <td class="text-success">有効</td>
          <% elsif @user.user_status == "退会" %>
            <td class="text-secondary">退会</td>
          <% else %>
            <td class="text-secondary">無効</td>
          <% end %>
        </tr>

      </table>
  </div>
</div>

<div class="row">
  <div class="col-sm-12">
<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>投稿画像</th>
      <th>アーティスト名</th>
      <th>曲名</th>
      <th>タイトル</th>
      <th>コメント数</th>
      <th>投稿日時</th>
      <th colspan="6"></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td>
          <%= image_tag post.get_image, size:'50x50' %>
        </td>
        <td><%= post.artist_name %></td>
        <td><%= post.song_title %></td>
        <td><%= post.title %></td>
        <td><%= post.post_comments.count %></td>
        <td><%= l post.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
  </div>
</div>