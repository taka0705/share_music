<div class="container px-5 px-sm-0">
  <div class="row">
     <h3 class="bg-light text-center">投稿一覧</h3>
      <table class= "table table-hover table-inverse">
      <thead class="bg-light">
        <tr>
          <th>投稿id</th>
          <th>ユーザ名</th>
          <th>アーティスト名</th>
          <th>曲名</th>
          <th>タイトル</th>
          <th>コメント数</th>
          <th>投稿日時</th>
          <th colspan="6"></th>
        </tr>
      </thead>
      <tbody>
        <% @posts.each do |post| %>
        <tr>
          <td><%= post.id %></td>
          <td><%= link_to post.user.name, admin_user_path(post.user.id) %></td>
          <td><%= post.artist_name %></td>
          <td><%= post.song_title %></td>
          <td><%= link_to post.title,admin_post_path(post.id) %></td>
          <td><%= post.post_comments.count %></td>
          <td><%= l post.created_at %></td>
          <td><%= link_to "Show",admin_post_path(post) %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col-md-12 d-flex justify-content-center">
      <%= paginate @posts %>
    </div>
  </div>
</div>