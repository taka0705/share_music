<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-sm-2 text-center">
      <h4>投稿一覧</h4>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-3 text-center">
      ------ジャンル検索------
      <% @genres.each do |genre| %>
      <div><%= link_to genre.name,searches_path(genre_id: genre.id) %></div>
      <% end %>
    </div>

    <div class="col-sm-9 text-center">
      <div class="card-deck">
            <% @posts.each do |post| %>

          <div class="col-md-4">
               <%= l post.created_at %>
            <div class="card mt-1">
                <%=link_to post_path(post) do %>
                  <%= image_tag post.get_image, class:"index-img" %>
                <% end %>
              <div class="card-body">
                <p class="card-title"><%= post.artist_name %></p>
                <p class="card-title"><%= post.song_title %></p>
                <p class="card-text"><%= post.title %></p>
              </div>
            </div>
          </div>
            <% end %>
      </div>
    </div>

    <div class="col-sm-12 d-flex justify-content-center">
    <%= paginate @posts %>
    </div>
  </div>
</div>



