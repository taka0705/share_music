<h2>ユーザ情報編集画面</h2>

<%= form_with model: @user, url: user_path,method: :patch do |f| %>

  <div class="field">
    <%= f.label :name, "ユーザ名" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label "ユーザ設定画像" %><br/>
    <%= f.file_field :user_image, accept: "image/*" %>
  </div>

  <div class="field">
    <%= f.label :email,"メールアドレス" %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

　<div class="field">
　  <%= f.label :introduction,"自己紹介文" %><br/>
　  <%= f.text_area :introduction %>
　</div>

  <div class="actions">
    <%= f.submit "更新" %>
  </div>
<% end %>

